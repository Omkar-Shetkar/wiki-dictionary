{
    "manifest_version": 2,
    "name": "Wiki Dictionary",
    "version": "1.0",
    "description": "Shows word definitions using Wiktionary API",
    "permissions": [
      "activeTab",
      "https://en.wiktionary.org/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": ["popup.html", "popup.css"],
    "icons": {
      "48": "icons/icon_48.png",
      "96": "icons/icon_96.png"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  }
  